import {useState} from 'react';
import CustomerServiceList from '../components/CustomerService/CustomerServiceList';
const CustomerServicePage = () => {
   useState([CustomerService, setCustomerService]); //define a state for the customer servce
   const dummyCustService = [
   { _id:1,
    custServiceName: 'Yasser Youssif',
    custServiceRole: 'Maintence',
    custServiceEmail: 'YasserYoussif01@gmail.com',
    custServicePhoneNum: 01065431313,
    custServiceAge: 30,
    custServiceSalary: 7000
   },
   {
    _id:2,
    custServiceName: 'Farah Dorgham',
    custServiceRole: 'Call Center',
    custServiceEmail: 'FarahDorgham02@gmail.com',
    custServicePhoneNum: 01056565605,
    custServiceAge: 30,
    custServiceSalary: 7000
   }
   ]; 
   const onButtonClickHandler = () =>{
    setCustomerService(dummyCustService);
   };

   return( <div className ="flex flex-col items-center justify-center">
    <CustomerServiceList CustomerService ={setCustomerService}/>
    <button
    className=" bg-blue-900 text-white py-3 px-10 my-10 font-bold rounded-x1"
    onClick={onButtonClickHandler}
    >
        Set Customer Service State
    </button>
   </div>
   );
};

export default CustomerServicePage;
